<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blur Shadow Layer -->
    <item>
        <shape >
            <solid android:color="#22000000" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="21dp" />
        </shape>
    </item>

    <!-- Main Content Layer (Your Shape Drawable) -->
    <item android:right="2dp" android:bottom="3dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="21dp" />
        </shape>
    </item>
</layer-list>
